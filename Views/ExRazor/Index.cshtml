@{
    string name = "Giuseppe";
    string surname = "Mirizzi";
}

@{
    int sum(int n)
    {
        int sum = 0;
        for (int i = 1; i <= n; i++)
        {
            sum += i;
        }
        return sum;
    }
}

@{
    char newChar = 'a';
    string newString = "nel mezzo del cammin di nostra vita";
    int charCount(char c, string s)
    {
        int n = 0;
        for (int i = 0; i < s.Length; i++)
        {
            if (c == s[i])
                n++;
        }
        return n;
    }
}

@{
    List<int> numberList = new List<int>(20);
    for (int i = 0; i < numberList.Capacity; i++)
    {
        numberList.Add(new Random().Next(1, 91));
    }
}

<div class="text-center">
    <h2 class="display-4">@name @surname</h2>
    <span>@sum(5)</span>
    <div>La lettera "@newChar" è presente nella frase "@newString" @charCount(newChar, newString) volte.</div>
    <div class="text-start">

        Numeri:
    <ol>
        @foreach (int num in numberList)
        {
            if (num >= 20 && num <= 70) {
                <li>@num</li>
            }
        }
    </ol>
    </div>
    <div>
        <h3>Esercizio 5</h3>
        @DateTime.Now.ToString("yyyy-MM-d HH:m:s")</div>
    <div>
        <h3>Esercizio 6</h3>
        <ol type="a" class="text-start">
            <li>@DateTime.Now.AddDays(-7).ToShortDateString()</li>
            <li>@DateTime.Now.ToString("dddd")</li>
            <li>@DateTime.Now.AddYears(1).ToString("dddd")</li>
        </ol>
    </div>
</div>
